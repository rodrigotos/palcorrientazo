<% form_name ||= "Manage" %>
<h1 class="text-center">  <%= form_name %> Corrientazo </h1>
<%= form_for @establishment , method: (form_name.downcase == 'edit' ? 'put' : 'post') do |f| %>
  <% if @establishment.errors.any? %>
      <div class="error" id="error_explanation">
        <h2>
          <i class="fa fa-times-circle"></i>
          <%= pluralize(@establishment.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @establishment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :zone%>
    <select name="establishment[zone]" >
      <% ["Norte", "Sur", "Oriente", "Occidente"].each do |a| %>
      <option value="<%= a.downcase %>"> <%= "#{a}" %> </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.hidden_field :longitude, class: "form-control" ,id:"longitude"%>
  </div>
  <div class="form-group">
    <%= f.hidden_field :latitude, class: "form-control", id:"latitude" %>
  </div>
  <div class="form-group">
    <%= f.label :category%>
    <select name="establishment[category]" >
      <% ["Vegetariano", "Casero", "Ejecutivo", "Especial"].each do |a| %>
      <option value="<%= a.downcase %>"> <%= "#{a}" %> </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price%>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <%= f.submit "#{form_name} establishment", class: "btn btn-lg btn-warning btn-block" %>
  <a href="<%= establishments_path %>" class="btn btn-lg boton-color-dos btn-block"> View all </a>
<% end %>
